<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="overview_text_usage">
        <item name="android:textSize">@dimen/overview_textUsage_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
        <item name="android:textStyle">bold</item>
        
    </style>
    
    <style name="overview_text_totals">
        <item name="android:textSize">@dimen/overview_textTotals_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
        <item name="android:textStyle">bold</item>
        
    </style>
    
    <style name="overview_text_smallLabels">
        <item name="android:textSize">@dimen/overview_text_smallLabelsHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
		    
    </style>
    
    <style name="stationsEntry_text_names">
        <item name="android:textSize">@dimen/stationEntry_name_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="stationsEntry_text_areas">
        <item name="android:textSize">@dimen/stationEntry_area_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    
    <style name="stationsEntry_text_adresses">
        <item name="android:textSize">@dimen/stationEntry_address_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
    </style>
    
    <style name="stationsEntry_text_distances">
        <item name="android:textSize">@dimen/stationEntry_area_textHeight</item>
        <item name="android:textColor">@color/overview_defaultBlack</item>
        
    </style>
    
    <!--  Colors -->
    <color name="overview_defaultWhite">#FFFFFF</color>
    <color name="overview_defaultBlack">#000000</color>

</resources>
